<!DOCTYPE html>
<html>
  <head>
    <title>MyApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color: #f2f2f2">
    <header class="main_menu">
      <div class="container">
        <div class="row align-items-center">
          <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top" >
            <div class="container">
              <%= link_to "家電比較.com", root_path, class: "navbar-brand" %> 
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                  <% if user_signed_in? %>
                    <li class="nav-item active">
                      <%= link_to "Post", new_item_path, class: "nav-link" %> 
                    </li>
                    <li class="nav-item">
                      <%= link_to "クチコミ", root_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "ログアウト", destroy_user_session_path, class: "nav-link", method: :delete %>
                    </li>
                    <% else %>
                    <li class="nav-item">
                      <%= link_to "クチコミ", root_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                    <li class="nav-item">
                      <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
                    </li>
                  <% end %>
                </ul>
                <div class="nav-link dropdown-toggle" style="color: #4fd2c2;">
                  <%#¥ <%= current_user.name %> 
                </div>
              </div>
            </div>
          </nav>
        </div>
      </div>
    </header>
    
    <%= yield %>

    <footer id="footer">
      <div class="footer-content">
        <div class="container">
          <div class="row">
            <div class="m-auto">
              <div class="footer-logo"><a href="/">家電比較.com</a></div>
              <p>
              <small>© 2019-2021. All Rights Reserved.</small>
              </p>
              <p class="social-icons">
              <a href="">Share on Twitter</a>
              <a href="">Share on Facebook</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
